<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        app:title="Chi Tiết"
        android:titleTextColor="@android:color/white"

        />

    <ImageView
        android:id="@+id/imgMonChiTiet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:contentDescription="Hình món ăn" />

    <TextView
        android:id="@+id/txtTenMonChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="Tên món ăn" />

    <TextView
        android:id="@+id/txtGiaMonChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Giá món ăn" />
    <TextView
        android:id="@+id/txtmotachitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_bright"
        android:text="Mô Tả:" />

    <Button
        android:id="@+id/dathang"
        android:layout_width="wrap_content"
        android:text="Đặt Hàng"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/backgroundbuttondathang"
        android:layout_height="wrap_content">

    </Button>
</LinearLayout>
